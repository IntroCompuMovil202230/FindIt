<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mychallenge.AddClueFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/arrow_back_search"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"

                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:progress="60"
                android:layout_height="30dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginLeft="20dp"
            android:text="Agregar Pistas"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="20dp"
            android:text="Añade las pistas para completar tu desafío."
            android:layout_marginTop="30dp"
            android:textSize="17dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="116dp"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Ordenar"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                app:icon="@drawable/ic_baseline_swap_vert_24"
                app:iconTint="@color/azul_boton"
                app:strokeColor="@color/azul_boton" />

            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Añadir pista"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconTint="@color/azul_boton"
                app:strokeColor="@color/azul_boton" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="20dp"
                android:text="Nombre"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="100dp"
                android:text="Categoría"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="100dp"
                    android:text="Editar"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <view class="androidx.appcompat.app.AlertController$RecycleListView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="100dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play_button"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:background="@drawable/button_item_blue"
                android:contextClickable="false"
                android:fontFamily="@font/inter_semibold"
                android:text="Anterior"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                android:textSize="14sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play_button_create"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/button_item_blue"
                android:contextClickable="false"
                android:fontFamily="@font/inter_semibold"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>