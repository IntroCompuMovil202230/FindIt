<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.MapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/arrow_back_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"

                />


            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="1:30"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                app:icon="@drawable/ic_baseline_hourglass_bottom_24"
                app:iconTint="@color/azul_boton"
                app:strokeColor="@color/azul_boton" />

            <Button
                android:id="@+id/map_term_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="TermÃ³metro"
                android:textAllCaps="false"
                android:textColor="@color/azul_boton"
                app:icon="@drawable/ic_baseline_device_thermostat_24"
                app:iconTint="@color/azul_boton"
                app:strokeColor="@color/azul_boton" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/group_183" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/green_acqua"
            android:text="Ver pistas cercanas"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</FrameLayout>