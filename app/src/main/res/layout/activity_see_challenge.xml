<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeChallengeActivity">

    <include
        android:id="@+id/include"
        layout="@layout/blueprint_see_challenge"
        android:layout_width="match_parent"
        android:layout_height="720dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jugar_text"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/azul_boton"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="340dp"
        android:backgroundTint="#00DDDDDD"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_heart_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>